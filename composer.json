{
    "name": "phh/test-ci",
    "repositories": [
      {
        "type": "vcs",
        "url": "https://github.com/Peytz-WordPress/Coding-Standards"
      }
    ],
    "require-dev": {
        "wp-coding-standards/wpcs": "dev-develop"
    },
    "scripts": {
      "post-install-cmd": [
          "\"vendor/bin/phpcs\" --config-set installed_paths vendor/wp-coding-standards/wpcs"
      ],
      "post-update-cmd": [
          "\"vendor/bin/phpcs\" --config-set installed_paths vendor/wp-coding-standards/wpcs"
      ]
    }
}
