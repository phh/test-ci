{
    "name": "phh/test-ci",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/Peytz-WordPress/Coding-Standards.git"
        }
    ],
    "require-dev": {
        "Peytz-WordPress/Coding-Standards": "@dev",
        "wp-coding-standards/wpcs": "dev-develop"
    }
    "scripts": {
        "post-install-cmd": "\"vendor/bin/phpcs\" --config-set installed_paths vendor/wp-coding-standards/wpcs,vendor/peytz-wordpress/coding-standards",
        "post-update-cmd" : "\"vendor/bin/phpcs\" --config-set installed_paths vendor/wp-coding-standards/wpcs,vendor/peytz-wordpress/coding-standards"
    }
}
